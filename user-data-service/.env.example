# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (PostgreSQL)
# These values are typically sourced from AWS Secrets Manager in production
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=mysecretpassword
DB_DATABASE=calculator_db

# AWS Configuration
AWS_REGION=us-east-1
# Name of the secret in AWS Secrets Manager containing DB credentials and other secrets
AWS_SECRETS_MANAGER_NAME=calculator/user-data-service/secrets

# AWS Cognito Configuration (for JWT validation)
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXX
COGNITO_JWKS_URL=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_XXXXXXXXX/.well-known/jwks.json

# AWS SQS Configuration (for async jobs like data export)
SQS_DATA_EXPORT_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/data-export-queue

# Formula Execution Lambda Configuration
FORMULA_EXECUTION_LAMBDA_ARN=arn:aws:lambda:us-east-1:123456789012:function:formula-execution-service